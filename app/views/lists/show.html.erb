<div class="m-3">
  <h2><%= @list.name %></h2>
  <div>
    <% @list.bookmarks.each do |bookmark| %>
      <%= bookmark.movie.title %>
      <%= bookmark.movie.overview %>
      <br>
      <%= bookmark.comment %>
      <%= link_to "Delete", bookmark_path(bookmark), #action de mon controller bookmarks, pas lists
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <br>
      <% end %>
  </div>
  <div>
    <%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-dark"%>
    <%= link_to "Back to the Movie list", root_path %>
  </div>
</div>
